---
import LinkedinIcon from "../icons/Linkedin.astro";
import GithubIcon from "../icons/GitHub.astro";
import InstagramIcon from "../icons/Instagram.astro";

const year = new Date().getFullYear();

const SOCIALS = [
  {
    name: "Linkedin",
    url: "https://www.linkedin.com/in/stivenvr",
    icon: LinkedinIcon,
  },
  // {
  //   name: "Contactame",
  //   url: "#",
  // },
  {
    name: "GitHub",
    url: "https://github.com/JS-VILLARREAL",
    icon: GithubIcon,
  },
  {
    name: "Instagram",
    url: "https://www.instagram.com/stiveenvr",
    icon: InstagramIcon,
  },
];
---

<footer class="bg-white rounded-lg shadow dark:bg-white/5 m-4">
  <div class="w-[400px] md:w-[560px] max-w-screen-xl mx-auto p-4 md:py-8">
    <div class="flex items-center justify-center">
      <div class="flex justify-center pb-2">
        {
          SOCIALS.map((social) => (
            <a
              href={social.url}
              class="text-gray-500 text-sm font-semibold dark:text-gray-400 hover:text-gray-700 dark:hover:text-gray-300 mx-2 underline items-center inline-flex"
            >
              {social.icon && <social.icon class="size-3 mr-1" />}
              {social.name}
            </a>
          ))
        }
      </div>
    </div>
    <hr class="my-2 border-gray-200 sm:mx-auto dark:border-gray-500" />
    <span class="block text-sm text-gray-500 sm:text-center dark:text-gray-400">
      Â© {year} Jamidx. Casi todos los derechos reservados.
    </span>
  </div>
</footer>
