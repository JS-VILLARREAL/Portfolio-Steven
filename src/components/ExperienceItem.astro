---
interface Props {
  title: string;
  subtitle: string;
  date: string;
  description: string;
  link?: string;
}

const { title, subtitle, date, description, link } = Astro.props;
---

<div
  class="absolute w-3 h-3 bg-gray-200 rounded-full mt-1.5 -start-1.5 border border-white dark:border-gray-900 dark:bg-gray-700"
>
</div>
<time
  class="sm:absolute sm:-left-20 translate-y-0.5 items-center justify-center text-xs font-normal uppercase w-20 h-8 text-gray-400"
  >{date}</time
>
<h3 class="text-xl font-semibold text-gray-900 dark:text-gray-100">
  {title}
</h3>
<p class="mb-2 text-base text-gray-500 dark:text-gray-200">
  {subtitle}
</p>
<p
  class="mb-4 text-base text-pretty font-normal text-gray-500 dark:text-gray-400"
>
  {description}
</p>
